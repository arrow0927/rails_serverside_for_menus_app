<h1>Tasks</h1>

<table>
  <tr>
    <th>Task Name</th>
    <th>Description</th>
    <th>Last Run at</th>
    <th>Last Run by</th>

  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=task.task_name %></td>
    <td><%=task.description %></td>
    <td><%=task.last_run_at_time %></td>
    <td><%=task.last_run_by_user %></td>

    <td><%= link_to 'Run Task now', run_tasks_path(task)  %></td>
    <td><%= link_to 'Last Times output', task %></td>
   <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
