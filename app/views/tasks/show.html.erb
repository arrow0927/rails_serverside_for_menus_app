<p id="notice"><%= notice %></p>

<p>
  <b>Task id:</b>
  <%= @task.id %>
</p>
<p>
  <b>Task name:</b>
  <%= @task.task_name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Last Run at:</b>
  <%= @task.last_run_at_time %>
</p>

<p>
  <b>Last Run by:</b>
  <%= @task.last_run_by_user %>
</p>

<p>
  <b>Output from last run:</b>
  <%= h(@task.output_from_last_run).gsub(/\n/, '<br/>' ).html_safe  %>
</p>





<%= link_to 'Edit', edit_task_path(@task) %> |
