<h1>Listing menu_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Listing name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category1</th>
    <th>Category2</th>
    <th>Category3</th>
    <th>Addon1</th>
    <th>Addon1price</th>
    <th>Addon2</th>
    <th>Addon2price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= menu_item.name %></td>
    <td><%= menu_item.listing_name %></td>
    <td><%= menu_item.description %></td>
    <td><%= menu_item.price %></td>
    <td><%= menu_item.category1 %></td>
    <td><%= menu_item.category2 %></td>
    <td><%= menu_item.category3 %></td>
    <td><%= menu_item.addOn1 %></td>
    <td><%= menu_item.addOn1price %></td>
    <td><%= menu_item.addOn2 %></td>
    <td><%= menu_item.addOn2price %></td>
    <td><%= link_to 'Show', menu_item %></td>
    <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
    <td><%= link_to 'Destroy', menu_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

