<%= simple_form_for(@menu_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :listing_name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category1 %>
    <%= f.input :category2 %>
    <%= f.input :category3 %>
    <%= f.input :addOn1 %>
    <%= f.input :addOn1price %>
    <%= f.input :addOn2 %>
    <%= f.input :addOn2price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
