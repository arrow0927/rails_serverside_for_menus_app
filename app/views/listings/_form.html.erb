<%if user_signed_in? %></br/>

<%= simple_form_for(@listing, :html => {:multipart => true, :class=> 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>
   <%= f.button :submit %>
  
  <%= f.input :id , :readonly => true %>
  <%= f.input :name %>
  <%= f.input :checked , hint: "Has the data been cleansed and checked?" %>
  <%= f.input :menu_state,  collection: [:physical_menu_collected, :url_collected, :sent_to_India, :converted_to_Excel, :cleansed, :tagged, :inserted_in_DB, :not_yet_collected, :not_a_restaurant, :refused_to_give, :outside_downtown, :collect_from_location] %>
  <%= f.input :menu_source, collection: [:text, :website, :raw, :not_applicable ] %>
  
  <%= f.input :keep , hint: "After checking for duplicates decide whether to keep or flag as a duplicate.."%>
  <%= f.input :notes, hint: "Further instructions on what needs to be done" %>
  <%= f.input :telephone %>
  <%= f.input :fax %>
  <%= f.input :suite %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :province %>
  <%= f.input :postal_code %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :business_type %>
  <%= f.input :sub_type %>
  <%= f.input :owner %>
  <%= f.input :local_area %>
  <%= f.error :base %>
  
 
  
  
<% end %>
<%else%>
				<%=link_to "Sign in", new_user_session_path , :class => 'btn btn-mini btn-danger'%><br/>
					Contact the admin to obtain a login and password
<%end%>
